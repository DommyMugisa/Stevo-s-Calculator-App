doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Simple Calculator
  link(rel='stylesheet' href='./public/Bootstraps/css/bootstrap.css')
  link(rel='stylesheet' href='./public/style.css')
.container
  .card
    h3 Simple Calc v0.1
    .card-body
      b
        p#result
      .container
        .row
          .col-sm
            label(for='num1') First Input:
            br
            input#num1(type='number' placeholder='Number')
          .col-sm
            label(for='btn') Operand:
            br
            button.btn(onclick='addNumbers()')
              | +
            button.btn(onclick='subtractNumbers()')
              | -
            button.btn(onclick='multiplyNumbers()')
              | *
            button.btn(onclick='divideNumbers()')
              | /
            button.btn.pt-0.pb-0.mt-3(onclick='clearScreen()')
              | AC
          .col-sm
            label(for='num2') Second Input:
            br
            input#num2(type='number' placeholder='Number')
footer GROUP 1: Alinda, Wilfred, Dominic, Richard, Gerald.
script(src='./public/Bootstraps/js/bootstrap.js')
script(src='./public/calc.js')
